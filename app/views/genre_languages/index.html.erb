<div id="index">
  <table border =1>
    <tr>
      <th>ID      </th>
      <th>Genre Language</th>
    </tr>

  <%  @langs.each do |l| %>
      <tr>
        <td>  <%=        l.id     %>   </td>
        <td>  <%=        l.name        %></td>
        <td><%#= link_to 'show', genre_language_path(l) %></td>
